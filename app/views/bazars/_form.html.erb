<div class="left_content">
  <h1 class="content_header"> Bazar List </h1>
  <div class="new_bill">
    <%= form_for(@bazar) do |f| %>
      <% if @bazar.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@bazar.errors.count, "error") %> prohibited this bazar from being saved:</h2>
          <ul>
            <% @bazar.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <table id="bill_chart" class="table table-striped table-bordered table-condensed" cellpadding="0" cellspacing="0">
        <thead>
        <th> Field </th>
        <th> Value </th>
        </thead>
        <tbody>
          <tr>
            <td> Month </td>
            <td> <%= f.select :month, options_for_select([["Jan", '1'], ["Feb", '2'], ["Mer", '3'], ["Apr", '4'], ["May", '5'], ["Jun", '6'], ["Jul", '7'], ["Aug", '8'], ["Sep", '9'], ["Oct", '10'], ["Nav", '11'], ["Dec", '12'],  ]) %> </td>
          </tr>
          <tr>
            <td> Year </td>
            <td> <%= f.select :year, options_for_select(['2011', '2012', '2013', '2014', '2015']) %> </td>
          </tr>
          <tr>
            <td> Date </td>
            <td> <%= f.text_field :date %> </td>
          </tr>
          <tr>
            <td> Description </td>
            <td> <%= f.text_area :description %> </td>
          </tr>
          <tr>
            <td> Total </td>
            <td> <%= f.text_field :total %> </td>
          </tr>
        </tbody>
      </table>
    </div>
    <%= f.submit :class => "sample btn custom large k" %>
  <%end%>
</div>
<div class="right_content">
  <h1 class="content_header"> <span style="font-size: 16px;"> Bill For Member </span> </h1>
  <div id="user_info">
    <%= render :partial => "shared/user_info", :locals => {:user => current_user} %>
  </div>
</div>
<script type="text/javascript">
  $("#bazar_date").datepicker();
</script>
