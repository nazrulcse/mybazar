<table class="table table-striped table-bordered table-condensed bill_table" cellpadding="0" cellspacing="0">
  <thead>
  <th> Bill Name </th>
  <th> Amount </th>
</thead>
<tbody>
  <tr>
    <td> House Rent </td>
    <td> <%= bill.house_rent %> </td>
  </tr>
  <tr>
    <td> Utility Bill </td>
    <td> <%= bill.gas_bill %> </td>
  </tr>
  <tr>
    <td> Meal </td>
    <td> <%= bill.meal %> </td>
  </tr>
  <tr>
    <td> Service(cook) </td>
    <td> <%= bill.service %> </td>
  </tr>
  <tr>
    <td> Extra </td>
    <td> <%= bill.extra %> </td>
  </tr>
</tbody>
<tfoot>
<th style="text-align: right;"> Total </th>
<th> 0 </th>
</tfoot>
</table>